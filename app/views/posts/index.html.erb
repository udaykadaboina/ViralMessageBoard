<div class="container">
<h2>Listing posts</h2>

<table class="table table-striped">
  <thead>
    <tr>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td>
          <strong><%= link_to "#{post.title}", post %></strong><br />
          <small>Posted <%= time_ago_in_words(post.created_at) + " ago by" + " #{post.name}" %></small>
        </td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path, :class => 'btn'%>

</div>